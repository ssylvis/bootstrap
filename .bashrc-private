# Increase size of history buffer
export HISTSIZE=10000
export HISTFILESIZE=10000

# Share history between sessions
shopt -s histappend
export PROMPT_COMMAND="history -a; $PROMPT_COMMAND"

# Add own overrides
export INPUTRC=~/.inputrc
export PATH=${PATH}:~/bin

# Add bash completion (macOS)
if [ -x "/usr/local/etc/bash_completion.d" ]; then
  for file in /usr/local/etc/bash_completion.d/*; do
    source $file
  done
fi

# Add bash completion (unix)
[ -x "/etc/bash_completion" ] && source /etc/bash_completion

# Alias hub, if installed
if [ -x "$(command -v hub)" ]; then
  eval "$(hub alias -s)"
fi

# Override prompt
export PS1="\h: \w\$(__git_ps1)\$ "

# Add user aliases
for alias in `ls ~/.*_alias`; do
  source $alias
done
